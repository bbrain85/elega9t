<plugin:plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:plugin="http://www.elega9t.com/elixir/plugin">
    <plugin:keymaps>
        <plugin:keymap name="Default">
            <plugin:keymap-group name="EDITOR_ACTIONS">
                <plugin:keymap-action name="Expand Shorthand" id="ExpandShorthandAction" keyboardShortcut="pressed TAB" secondKeyboardShortcut="" actionClass="com.elega9t.elixir.gui.actions.editor.ExpandSqlShorthandAction"/>
                <plugin:keymap-action name="Execure Query" id="ExecuteQuery" keyboardShortcut="ctrl pressed ENTER" secondKeyboardShortcut="" actionClass="com.elega9t.elixir.gui.actions.editor.ExecuteQueryAction"/>
            </plugin:keymap-group>
        </plugin:keymap>
    </plugin:keymaps>
    <plugin:driver-definitions>
        <plugin:driver-definition>
            <plugin:database>MySQL</plugin:database>
            <plugin:website>http://www.mysql.com</plugin:website>
            <plugin:jdbc-url>jdbc:mysql://[host]:[port]/[db]</plugin:jdbc-url>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>MySQL</plugin:name>
                    <plugin:website>http://www.mysql.com</plugin:website>
                    <plugin:driver>
                        <plugin:class>com.mysql.jdbc.Driver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
                <plugin:driver-vendor>
                    <plugin:name>MM-MySQL</plugin:name>
                    <plugin:website>http://www.mysql.com</plugin:website>
                    <plugin:driver>
                        <plugin:class>org.gjt.mm.mysql.Driver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
    </plugin:driver-definitions>
</plugin:plugin>