<plugin:plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:plugin="http://www.elega9t.com/elixir/plugin">
    <plugin:driver-definitions>
        <plugin:driver-definition>
            <plugin:database>Derby</plugin:database>
            <plugin:website>http://db.apache.org/derby</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>Derby</plugin:name>
                    <plugin:website>http://db.apache.org/derby</plugin:website>
                    <plugin:jdbc-url>jdbc:derby:net://[host]:[port]/[db]</plugin:jdbc-url>
                    <plugin:jdbc-url-defaults>
                        <plugin:default name="port" value="1527"/>
                    </plugin:jdbc-url-defaults>
                    <plugin:driver>
                        <plugin:class>org.apache.derby.jdbc.ClientDriver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
        <plugin:driver-definition>
            <plugin:database>HSQLDB</plugin:database>
            <plugin:website>http://hsqldb.sourceforge.net</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>HSQLDB</plugin:name>
                    <plugin:website>http://hsqldb.sourceforge.net</plugin:website>
                    <plugin:jdbc-url>jdbc:hsqldb:hsql://[host]:[port]/[service]</plugin:jdbc-url>
                    <plugin:driver>
                        <plugin:class>org.hsqldb.jdbcDriver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
        <plugin:driver-definition>
            <plugin:database>Informix</plugin:database>
            <plugin:website>http://www.ibm.com</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>Informix</plugin:name>
                    <plugin:website>http://www.ibm.com</plugin:website>
                    <plugin:jdbc-url>jdbc:informix-sqli://[host]:[port]/[database]:informixserver=[dbserver]</plugin:jdbc-url>
                    <plugin:driver>
                        <plugin:class>com.informix.jdbc.IfxDriver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
        <plugin:driver-definition>
            <plugin:database>MySQL</plugin:database>
            <plugin:website>http://www.mysql.com</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>MySQL</plugin:name>
                    <plugin:website>http://www.mysql.com</plugin:website>
                    <plugin:jdbc-url>jdbc:mysql://[host]:[port]/[db]</plugin:jdbc-url>
                    <plugin:jdbc-url-defaults>
                        <plugin:default name="port" value="3306"/>
                    </plugin:jdbc-url-defaults>
                    <plugin:driver>
                        <plugin:class>com.mysql.jdbc.Driver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
                <plugin:driver-vendor>
                    <plugin:name>MM-MySQL</plugin:name>
                    <plugin:website>http://www.mysql.com</plugin:website>
                    <plugin:jdbc-url>jdbc:mysql://[host]:[port]/[db]</plugin:jdbc-url>
                    <plugin:jdbc-url-defaults>
                        <plugin:default name="port" value="3306"/>
                    </plugin:jdbc-url-defaults>
                    <plugin:driver>
                        <plugin:class>org.gjt.mm.mysql.Driver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
        <plugin:driver-definition>
            <plugin:database>Oracle</plugin:database>
            <plugin:website>http://www.oracle.com</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>Oracle</plugin:name>
                    <plugin:website>http://www.oracle.com</plugin:website>
                    <plugin:jdbc-url>jdbc:oracle:thin://[host]:[port]/[service]</plugin:jdbc-url>
                    <plugin:jdbc-url-defaults>
                        <plugin:default name="port" value="1521"/>
                    </plugin:jdbc-url-defaults>
                    <plugin:driver>
                        <plugin:class>oracle.jdbc.OracleDriver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
        <plugin:driver-definition>
            <plugin:database>PostgreSQL</plugin:database>
            <plugin:website>http://www.postgresql.org</plugin:website>
            <plugin:driver-vendors>
                <plugin:driver-vendor>
                    <plugin:name>Oracle</plugin:name>
                    <plugin:website>http://www.oracle.com</plugin:website>
                    <plugin:jdbc-url>jdbc:postgresql://[host]:[port]/[db]</plugin:jdbc-url>
                    <plugin:jdbc-url-defaults>
                        <plugin:default name="port" value="5432"/>
                    </plugin:jdbc-url-defaults>
                    <plugin:driver>
                        <plugin:class>org.postgresql.Driver</plugin:class>
                    </plugin:driver>
                </plugin:driver-vendor>
            </plugin:driver-vendors>
        </plugin:driver-definition>
    </plugin:driver-definitions>
</plugin:plugin>